{
  "name": "ml-market-react",
  "author": "Andres Felipe Rojas",
  "license": "ISC",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
	  "test": "react-scripts test",
	  "eject": "react-scripts eject",
	  "lint": "eslint --ext js src && stylelint \"src/**/*.scss\"",
    "start:front": "react-scripts start",
    "start:static": "node src/static/server.js",
    "start:dev": "concurrently -k -n app,server \"npm run start:front\" \"npm run start:static\"",
    "build:front": "react-scripts build",
	  "test:front": "npm test -- --coverage"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.6.3",
    "axios": "^0.21.1",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "lodash": "^4.17.20",
    "node-sass": "^5.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "^4.0.2",
    "web-vitals": "^1.1.0"
  },
  "eslintConfig": {
    "rules": {
      "semi": 0,
      "no-console": 0
    },
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.19.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "stylelint": "^13.9.0",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-config-standard": "^20.0.0"
  }
}
